import re
p = "hello. how are you? i'm fine, thank you."
sepwa = re.split(pattern=r"[.?!]", string=p )
#print(re.split(pattern=r"[.?]", string=p ))
#print(sepwa)
for lka in sepwa:
    print(lka.strip().capitalize())
sdw = [kkkk.strip().capitalize() for kkkk in sepwa]
print(sdw)
print(' '.join(sdw))
